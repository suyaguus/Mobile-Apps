generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int   @id @default(autoincrement())
  // id        String   @id @default(uuid()) untuk development akhir
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(uuid())
  title     String
  amount    Float
  type      String   // income | expense
  category  String
  date      DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}